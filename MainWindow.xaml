<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AppTimeTracker" Height="450" Width="800">
        


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12.857"/>
            <ColumnDefinition Width="155.72"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Label Content="Oyun Kütüphanesi" FontWeight="Bold" FontSize="16"/>
            <ListBox Name="gameListBox" SelectionChanged="gameListBox_SelectionChanged">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Sil" Click="DeleteGameMenuItem_Click"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
            <Button Content="Oyun Ekle" Click="AddGameButton_Click" Margin="0,10,0,0"/>
        </StackPanel>

        <ContentControl Grid.Column="2" Name="gameDetailsPanel" Margin="10,10,10,10"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2"/>
    </Grid>
</Window>
