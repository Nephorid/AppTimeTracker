<UserControl x:Class="Test.OyunDetaylari"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="GameNameTextBlock" Grid.Row="0" FontSize="24" FontWeight="Bold" Margin="10"/>

        <Button x:Name="PlayGameButton" Grid.Row="1" Content="Oyna" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="PlayGameButton_Click"/>

        <TextBlock x:Name="TimePlayedTextBlock" Grid.Row="1" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>

        <Image x:Name="GameLogoImage" Grid.Row="1" Margin="10,50,10,10" Stretch="Uniform"/>
    </Grid>

</UserControl>
